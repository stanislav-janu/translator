{
	"name": "stanislav-janu/translator",
	"description": "Translator for nette",
	"homepage": "https://lweb.cz",
	"license": "MIT",
	"authors": [
		{
			"name": "Stanislav JanÅ¯",
			"homepage": "http://www.lweb.cz"
		}
	],
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"t": "vendor/bin/tester tests -C",
		"sa": "vendor/bin/phpstan analyse src -l 7",
		"cs-i": "composer create-project nette/coding-standard temp/nette-coding-standard",
		"cs-t": "php -d memory_limit=512M temp/nette-coding-standard/ecs check src tests --config temp/nette-coding-standard/coding-standard-php71.yml",
		"cs-f": "php -d memory_limit=512M temp/nette-coding-standard/ecs check src tests --config temp/nette-coding-standard/coding-standard-php71.yml --fix"
	},
	"require": {
		"php": ">=7.1.0",
		"ext-pdo": "*",

		"nette/utils": "^3.0",
		"nette/caching": "^3.0",
		"nette/database": "^3.0",
		"thecodingmachine/safe": "^0.1.13"
	},
	"require-dev": {
		"nette/tester": "^2.1",
		"stanislav-janu/phpstan": "^0.11"
	},
	"conflict": {
		"nette/utils": "<3.0"
	},
	"minimum-stability": "dev",
	"extra": {
		"branch-alias": {
			"dev-master": "2.0-dev"
		}
	}
}
